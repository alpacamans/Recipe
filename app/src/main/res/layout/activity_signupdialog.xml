<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center">

        <ImageButton
            android:id="@+id/end_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"

            android:background="#FFFFFF"
            android:src="@drawable/arrow_left" />


        <TextView
            android:id="@+id/signupFirstText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="6"
            android:gravity="center"

            android:padding="5dp"


            android:text="회원가입"
            android:textColor="#000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"

        android:layout_centerInParent="true"
        android:background="#000000" />

    <View

        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="아이디"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/Id"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_bg"
            android:textColor="#000000"
            android:ems="8"
            android:inputType="textPersonName"
            android:text="" />


        <TextView
            android:id="@+id/IdCheck"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="사용중인 아이디입니다."
            android:textColor="#FF0000" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="닉네임"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/Username"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_bg"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/UsernameCheck"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="사용중인 닉네임입니다."
            android:textColor="#FF0000" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="이메일"
            android:textColor="#000000" />


        <EditText
            android:id="@+id/email"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_bg"
            android:ems="13"
            android:textColor="#000000"
            android:inputType="textPersonName"
            android:text="" />


        <TextView
            android:id="@+id/emailCheck"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="사용중인 이메일입니다."
            android:textColor="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="비밀번호"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/pw"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_bg"
            android:ems="13"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:text="" />

        <TextView
            android:id="@+id/pwCheck"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="사용할 수 없는 비밀번호 입니다."
            android:textColor="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="비밀번호 재입력"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/pw_c"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_bg"
            android:ems="13"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:text="" />

        <TextView
            android:id="@+id/pw_cCheck"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="비밀번호가 틀렸습니다."
            android:textColor="#FF0000" />
        <TextView
            android:id="@+id/userinformationText"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="회원정보를 제대로 입력해주세요."
            android:textColor="#FF0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"

            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_shadow"

            android:text="회원가입" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:id="@+id/findId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@null"
            android:text="아이디찾기"
            android:textColor="#FFC9C9" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"

            android:layout_centerInParent="true"
            android:background="#FF9C9C" />

        <Button
            android:id="@+id/findPw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="@null"
            android:text="비밀번호 찾기"
            android:textColor="#FFC9C9" />


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"

            android:layout_centerInParent="true"
            android:background="#FF9C9C" />


        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@null"
            android:text="로그인"
            android:textColor="#FFC9C9" />

    </LinearLayout>


</LinearLayout>
